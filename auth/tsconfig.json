{
  "compilerOptions": {
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node",
    "target": "ES6",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": ["src/**/*"]
}
